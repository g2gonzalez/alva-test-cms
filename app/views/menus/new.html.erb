<div class="jumbotron">
  <h1 class="text-center">Add New Item</h1>
</div>

<div class="row">
  <div class="col-md-6 .col-sm-6 .col-xs-6 col-md-offset-3">

		<%= form_tag '/menus' do %>

			<div class="form-group">
				<%= label_tag :item %>
				<%= text_field_tag :item, nil, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= label_tag "List id" %>
				<%= text_field_tag :listid, nil, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= label_tag :price %>
				<%= text_field_tag :price, nil, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= label_tag "Num orders" %>
				<%= text_field_tag :num_orders, nil, class: "form-control" %>
			</div>

			<div class="form-group">
				<%= submit_tag 'Submit', class: "btn btn-primary" %>
			</div>

		<% end %>

 	</div>
</div>